<%# <%= @user.profile.inspect %>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-3 text-center">
      <%= image_tag @user.profile.avatar.url(:thumb), class: 'avatar-img' %>
    </div>
    <div class="col-md-6">
      <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
      <h3><%= @user.profile.job_title %></h3>
      <div class="card profile-block profile-desc">
        <div class="card-body">
          <h4 class="card-title">Description</h4>
          <p class="card-text"> <%= @user.profile.description %></p>
        </div>
      </div>
      <% if current_user.plan_id == 2 %>
        <div class="card profile-block profile-contact-info">
          <div class="card-body">
            <h4 class="card-title">Contact Information</h4>
            <p class="card-text"><%= @user.profile.phone_number %></p>
            <p class="card-text"><%= @user.profile.contact_email %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
