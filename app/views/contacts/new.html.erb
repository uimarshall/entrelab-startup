<div class="container mt-5">
  <h3 class="text-center h1">Contact Us</h3>
  <div class="row">
    <div class="col-md-4 offset-4">
      <%= flash[:notice] %>
      <div class="card">
        <div class="card-header text-center h2 text-muted">
          EntreLab
        </div>
        <div class="card-body">
          <%= form_for @contact do |f| %>
            <div class="form-group">
              <%= f.label :name, "Your name" %>
              <%= f.text_field :name,class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email, "Your email" %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :comments, "Your comments" %>
              <%= f.text_area :comments, class: 'form-control' %>
            </div>
            <%= f.submit "Submit", class: 'form-control btn btn-info btn-block' %>
            <!-- form_for @object, html: { multipart: true }, do |f| -->
            <!-- form_for @object, html: { class: "classname" }, do |f| -->
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
